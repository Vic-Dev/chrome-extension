{
  "name": "IMDB/Netflix",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Display IMDB ratings on hover over Netflix movies and TV shows",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
  "tabs", 
  "<all_urls>",
  "https://www.omdbapi.com/",
  "https://www.netflix.com/*",
  "background"
  ],
  "background": {
    "script": ["background.js"] 
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"]
    }
  ]
}